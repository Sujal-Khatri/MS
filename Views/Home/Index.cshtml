}

<div class="container my-5"> <div class="row justify-content-center"> <div class="col-md-4 mb-4"> <a href="@Url.Action("Index", "Announcement")" class="text-decoration-none"> <div class="card border-0 shadow h-100 position-relative overflow-hidden" style=" background-image: url('/images/aspnet.jpeg'); background-size: cover; background-position: center; min-height: 200px; transition: transform 0.3s ease; "> <div class="position-absolute top-0 start-0 w-100 h-100" style="background: rgba(0, 0, 0, 0.45);"></div> <div class="card-body text-white d-flex flex-column justify-content-center align-items-center position-relative z-1 text-center"> <h4 class="fw-bold">📢 Announcements</h4> <p class="mb-0">Click to view all announcements</p> </div> </div> </a> </div>
<div class="col-md-4 mb-4">
        <a href="@Url.Action("Discussions", "Home")" class="text-decoration-none">
            <div class="card border-0 shadow h-100 position-relative overflow-hidden" style="
                background-image: url('/images/aspnet.jpeg');
                background-size: cover;
                background-position: center;
                min-height: 200px;
                transition: transform 0.3s ease;
            ">
                <div class="position-absolute top-0 start-0 w-100 h-100" style="background: rgba(0, 0, 0, 0.45);"></div>
                <div class="card-body text-white d-flex flex-column justify-content-center align-items-center position-relative z-1 text-center">
                    <h4 class="fw-bold">📝 Discussions</h4>
                    <p class="mb-0">Click to view all discussions</p>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-4 mb-4">
        <a href="@Url.Action("Services", "Home")" class="text-decoration-none">
            <div class="card border-0 shadow h-100 position-relative overflow-hidden" style="
                background-image: url('/images/aspnet.jpeg');
                background-size: cover;
                background-position: center;
                min-height: 200px;
                transition: transform 0.3s ease;
            ">
                <div class="position-absolute top-0 start-0 w-100 h-100" style="background: rgba(0, 0, 0, 0.45);"></div>
                <div class="card-body text-white d-flex flex-column justify-content-center align-items-center position-relative z-1 text-center">
                    <h4 class="fw-bold">🔧 Municipal Services</h4>
                    <p class="mb-0">Click to explore services</p>
                </div>
            </div>
        </a>
    </div>
</div>
</div> 
<!-- Latest Announcements Section --> <div class="container mb-5"> <h2 class="mb-4">🆕 Latest Announcements</h2>
@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var a in Model.Take(3))
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    @if (!string.IsNullOrEmpty(a.ImagePath))
                    {
                        <img src="@a.ImagePath" class="card-img-top" style="max-height: 200px; object-fit: cover;" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@a.Title</h5>
                        <p class="card-text">@a.Message</p>
                        <p class="small text-muted">@a.PostedAt.ToString("g")</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No announcements available.</p>
}
</div>
