@model List<MunicipalSolutions.Models.Announcement>
@{
    ViewData["Title"] = "Home";
}

<div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
    <div class="col">
        <div class="bg-light border p-3 text-center shadow-sm">
            <h5>📢 Announcements</h5>
            <a href="#" class="btn btn-primary btn-sm">Read More</a>
        </div>
    </div>
    <div class="col">
        <div class="bg-light border p-3 text-center shadow-sm">
            <h5>📝 Discussions</h5>
            <a href="#" class="btn btn-primary btn-sm">Join Now</a>
        </div>
    </div>
    <div class="col">
        <div class="bg-light border p-3 text-center shadow-sm">
            <h5>🔧 Municipal Services</h5>
            <a href="#" class="btn btn-primary btn-sm">Explore</a>
        </div>
    </div>
</div>

<h2 class="mt-4 mb-3">🆕 Latest Announcements</h2>

@if (Model != null && Model.Any())
{
    <ul class="list-group">
        @foreach (var a in Model)
        {
            <li class="list-group-item">
                <h5>@a.Title</h5>
                <p>@a.Message</p>
            </li>
        }
    </ul>
}
else
{
    <p>No announcements available.</p>
}